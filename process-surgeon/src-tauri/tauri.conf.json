{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Process Surgeon",
  "version": "0.1.0-beta.1",
  "identifier": "com.streamline1175.process-surgeon",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Process Surgeon",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Network port and process management utility",
    "longDescription": "Process Surgeon is a cross-platform desktop application that helps developers manage network ports and processes. Find what's using a port, kill processes gracefully or forcefully, manage Docker containers, and more.",
    "copyright": "Copyright Â© 2025 Streamline1175",
    "licenseFile": "../LICENSE",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
